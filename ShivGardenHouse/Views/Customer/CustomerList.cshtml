@model ShivGardenHouse.Models.Customer
@{
    ViewBag.Title = "CustomerList";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
@using (Html.BeginForm("CustomerList", "Customer", FormMethod.Post, new { @id = "form1" }))
{
    <p style="color: red">
        @TempData["Registration"]
        @TempData["BlockUnblock"]
    </p>

    <div class="page-header">
        <div class="page-block">
            <div class="row align-items-center">
                <div class="col-md-8">
                    <div class="page-header-title">
                        <h4 class="m-b-10">Customer List</h4>
                    </div>

                </div>
            </div>
        </div>
    </div>
    <div class="pcoded-inner-content">
        <div class="main-body">
            <div class="page-wrapper">
                <div class="page-body">
                    <div class="row">
                        <div class="col-md-12">
                            <!-- HTML5 Export Buttons table start -->
                            <div class="card">
                                <div class="card-header table-card-header">
                                    <a class="btn btn-primary btn-sm" style="margin-left:75%" href="/Customer/CustomerRegistration">Add New</a>
                                </div>
                                <div class="card-block">
                                    <div class="form-group row">
                                        <div class="col-sm-3">
                                            <label class="float-label">Customer LoginId</label>
                                            @Html.TextBoxFor(m => m.CustomerLoginID, new { @class = "form-control", @Placeholder = "Sponsor LoginID" })
                                            <span class="form-bar"></span>
                                        </div>
                                        <div class="col-sm-3">
                                            <label class="float-label">Customer Name </label>
                                            @Html.TextBoxFor(m => m.CustomerName, new { @class = "form-control", @Placeholder = "Sponsor Name" })
                                            <span class="form-bar"></span>
                                        </div>
                                        <div class="col-sm-3">
                                            <label class="float-label">Associate LoginId</label>
                                            @Html.TextBoxFor(m => m.AssociateID, new { @class = "form-control", @Placeholder = "Search by PartnerID" })
                                            <span class="form-bar"></span>
                                        </div>
                                        <div class="col-sm-3">
                                            <label class="float-label">Associate Name</label>
                                            @Html.TextBoxFor(m => m.AssociateName, new { @class = "form-control", @Placeholder = "Associate Name" })
                                            <span class="form-bar"></span>
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <div class="col-sm-3">
                                            <label class="float-label">Joining From Date</label>
                                            @Html.TextBoxFor(m => m.JoiningFromDate, new { @class = "form-control", @Placeholder = "From Date" })
                                            <span class="form-bar"></span>
                                        </div>
                                        <div class="col-sm-3">
                                            <label class="float-label">Joining To Date</label>
                                            @Html.TextBoxFor(m => m.JoiningToDate, new { @class = "form-control", @Placeholder = "To Date" })
                                            <span class="form-bar"></span>
                                        </div>&nbsp;
                                        <div class="col-sm-3">
                                            <input class="btn btn-success" type="submit" value="Search" id="btnSearchCustomer" name="btnSearchCustomer" />
                                        </div>
                                    </div>
                                    <div class="dt-responsive table-responsive">
                                        <table id="basic-btn" class="table table-striped table-bordered nowrap">
                                            <thead>
                                                <tr>
                                                    <th>S No.</th>
                                                    <th>Customer ID</th>
                                                    <th>Customer Name</th>
                                                    <th>Branch</th>
                                                    <th>Assocaite ID</th>
                                                    <th>Associate Name</th>
                                                    <th>JoiningDate</th>
                                                    <th>Mobile Number</th>
                                                    <th>Email</th>
                                                    <th>Pan</th>
                                                    <th>Action</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @if (Model != null)
                                                {
                                                    if (Model.ListCust != null)
                                                    {
                                                        int i = 1;
                                                        foreach (var Item in Model.ListCust)
                                                        {
                                                            <tr class="text-left">
                                                                <td>@i</td>
                                                                <td>@Item.LoginID</td>
                                                                <td>@Item.CustomerName</td>
                                                                <td>@Item.BranchName</td>
                                                                <td>@Item.SponsorID  </td>
                                                                <td>@Item.SponsorName </td>
                                                                
                                                                <td>@Item.JoiningDate</td>
                                                                <td>@Item.Contact</td>
                                                                <td>@Item.Email</td>
                                                                <td>@Item.PanNo</td>
                                                                <td>
                                                                    <a href="/Customer/CustomerRegistration?UserID=@Item.EncryptKey" class="btn btn-info btn-sm">Edit</a>
                                                                    <a href="/Customer/Delete?UserID=@Item.UserID" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this Customer?');">Delete</a>

                                                            </tr>
                                                            i++;
                                                        }
                                                    }
                                                }
                                            </tbody>
                                            <tfoot>
                                                <tr>
                                                    <th hidden>PK_UserId</th>
                                                    <th>S No.</th>
                                                    <th>Customer ID</th>
                                                    <th>Customer Name</th>
                                                    <th>Branch</th>
                                                    <th>Assocaite ID</th>
                                                    <th>Associate Name</th>
                                                    <th>JoiningDate</th>
                                                    <th>Mobile Number</th>
                                                    <th>Email</th>
                                                    <th>Pan</th>
                                                    <th>Action</th>
                                                </tr>
                                            </tfoot>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>



}

<script src="~/files/bower_components/jquery/js/jquery.min.js"></script>
<script src="//code.jquery.com/ui/1.11.4/jquery-ui.js"></script>
<link rel="stylesheet" type="text/css" href="https://code.jquery.com/ui/1.12.0/themes/smoothness/jquery-ui.css">

<script>


    $('#JoiningFromDate').datepicker({
        dateFormat: 'dd/mm/yy',
        changeYear: true,
        changeMonth: true
    });
    $('#JoiningToDate').datepicker({
        dateFormat: 'dd/mm/yy',
        changeYear: true,
        changeMonth: true
    });

</script>


