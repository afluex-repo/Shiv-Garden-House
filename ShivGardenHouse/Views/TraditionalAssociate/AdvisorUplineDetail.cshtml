@model ShivGardenHouse.Models.TraditionalAssociate
@{
    ViewBag.Title = "AdvisorUplineDetail";

    Layout = "~/Views/Shared/AdminLayout.cshtml";
}


@using (Html.BeginForm("AdvisorUplineDetail", "TraditionalAssociate", FormMethod.Post, new { @id = "form1" }))
{
    <div class="page-header">
        <div class="page-block">
            <div class="row align-items-center">
                <div class="col-md-8">
                    <div class="page-header-title">
                        <h4 class="m-b-10">Partner Upline</h4>
                    </div>

                </div>
            </div>
        </div>
    </div>
    <div class="pcoded-inner-content">
        <div class="main-body">
            <div class="page-wrapper">
                <div class="page-body">
                    <div class="row">
                        <div class="col-md-12">
                            <!-- HTML5 Export Buttons table start -->
                            <div class="card">
                                <div class="card-header table-card-header">
                                    
                                </div>
                                <div class="card-block">
                                    
                                    <div class="form-group row">
                                        <div class="col-sm-3">
                                            <label class="float-label">Partner Id</label>
                                            @Html.TextBoxFor(m => m.AssociateID, new { @class = "form-control", @Placeholder = "Search by Partner ID" })
                                            <span class="form-bar"></span>
                                        </div>
                                       
                                        <div class="col-sm-3">
                                            <br/>
                                            <input class="btn btn-success" type="submit" value="Search" id="btnSearch" name="Search" onclick="return validateform();" />
                                        </div>
                                    </div>
                                    <div class="dt-responsive table-responsive">
                                        <table id="basic-btn" class="table table-striped table-bordered nowrap">
                                            <thead>
                                                <tr>
                                                    <th>S No.</th>
                                                    <th>Partner ID</th>
                                                    <th>Partner Name</th>
                                                    <th>Rank Name</th>
                                                    <th>Rank</th>
                                                    <th>Branch Name</th>
                                                    <th>Mobile Number</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @if (Model != null)
                                                {
                                                    if (Model.lstTrad != null)
                                                    {
                                                        int i = 1;
                                                        foreach (var Item in Model.lstTrad)
                                                        {
                                                            <tr class="text-left">
                                                                <td>@i</td>
                                                                <td>@Item.AssociateID</td>
                                                                <td>@Item.AssociateName  </td>
                                                                <td>@Item.DesignationName </td>
                                                                <td>@Item.Percentage</td>
                                                                <td>@Item.BranchName</td>
                                                                <td>@Item.Contact</td>

                                                            </tr>
                                                            i++;
                                                        }
                                                    }
                                                }
                                            </tbody>
                                            <tfoot>
                                                <tr>
                                                    <th>S No.</th>
                                                    <th>Partner ID</th>
                                                    <th>Partner Name</th>
                                                    <th>Rank Name</th>
                                                    <th>Rank</th>
                                                    <th>Branch Name</th>
                                                    <th>Mobile Number</th>
                                                </tr>
                                            </tfoot>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


       

               
}



<script>
    

    function validateform() {
        $(".errortext").removeClass("errortext");


        if ($('#AssociateID').val() == '') {
            $("#AssociateID").addClass('errortext');
            $('#AssociateID').focus();
            alert("Please fill Associate ID");
            return false;
        }


        return true;
    }
</script>



