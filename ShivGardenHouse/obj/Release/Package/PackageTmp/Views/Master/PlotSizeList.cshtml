@model ShivGardenHouse.Models.Master
@{
    ViewBag.Title = "PlotSizeList";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

@using (Html.BeginForm("SiteList", "Master", FormMethod.Post, new { @id = "form1" }))
{
    <p style="color: red">
        @TempData["PlotSize"]
    </p>
    <div class="page-header">
        <div class="page-block">
            <div class="row align-items-center">
                <div class="col-md-8">
                    <div class="page-header-title">
                        <h4 class="m-b-10">Plot Size List</h4>
                    </div>

                </div>
            </div>
        </div>
    </div>
    <div class="pcoded-inner-content">
        <div class="main-body">
            <div class="page-wrapper">
                <div class="page-body">
                    <div class="row">
                        <div class="col-md-12">
                            <!-- HTML5 Export Buttons table start -->
                            <div class="card">
                                <div class="card-header table-card-header">
                                    <a class="btn btn-primary btn-sm" style="margin-left:75%" href="/Master/PlotSizeMaster">Add New</a>
                                </div>
                                <div class="card-block">
                                    <div class="dt-responsive table-responsive">
                                        <table id="basic-btn" class="table table-striped table-bordered nowrap">
                                            <thead>
                                                <tr>
                                                    <th>S No.</th>
                                                    <th>Width Feet</th>
                                                    <th>Width Inch</th>
                                                    <th>Height Feet</th>
                                                    <th>Height Inch</th>
                                                    <th>Plot Area</th>
                                                    <th></th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @if (Model != null)
                                                {
                                                    if (Model.lstSite != null)
                                                    {
                                                        int i = 1;
                                                        foreach (var Item in Model.lstSite)
                                                        {
                                                            <tr class="text-left">
                                                                <td>@i</td>
                                                                <td>@Item.WidthFeet</td>
                                                                <td>@Item.WidthInch</td>
                                                                <td>@Item.HeightFeet</td>
                                                                <td>@Item.HeightInch</td>
                                                                <td>@Item.PlotArea</td>
                                                                <td>
                                                                    <a href="/Master/PlotSizeMaster?plotSizeID=@Item.EncryptKey" class="btn btn-info btn-sm">Edit</a>
                                                                    <a href="/Master/DeletePlotSize?id=@Item.PlotSizeID" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you wish to delete this Plot Size?');">Delete</a>
                                                                </td>

                                                            </tr>
                                                            i++;
                                                        }

                                                    }
                                                }

                                            </tbody>
                                            <tfoot>
                                                <tr>
                                                    <th>S No.</th>
                                                    <th>Width Feet</th>
                                                    <th>Width Inch</th>
                                                    <th>Height Feet</th>
                                                    <th>Height Inch</th>
                                                    <th>Plot Area</th>
                                                    <th></th>
                                                </tr>
                                            </tfoot>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>



    
    
    
}

