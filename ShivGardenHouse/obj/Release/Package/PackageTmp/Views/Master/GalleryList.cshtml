@model ShivGardenHouse.Models.Master

@{
    ViewBag.Title = "GalleryList";
 Layout = "~/Views/Shared/AdminLayout.cshtml";
}


@using (Html.BeginForm("GalleryList", "Master", FormMethod.Post, new { @id = "form1" }))
{

    <p style="color: red">
        @TempData["Plot"]
    </p>
    <div class="page-header">
        <div class="page-block">
            <div class="row align-items-center">
                <div class="col-md-8">
                    <div class="page-header-title">
                        <h4 class="m-b-10">Gallery List</h4>
                    </div>

                </div>
            </div>
        </div>
    </div>
    <div class="pcoded-inner-content">
        <div class="main-body">
            <div class="page-wrapper">
                <div class="page-body">
                    <div class="row">
                        <div class="col-md-12">
                            <!-- HTML5 Export Buttons table start -->
                            <div class="card">
                                <div class="card-header table-card-header">
                                    <p style="color: red">
                                        @TempData["Images"]
                                    </p>
                                    <a class="btn btn-primary btn-sm" style="margin-left:75%" href="/Master/GalleryMaster">Add New</a>
                                </div>
                                <dilv class="card-block">
                                    <div class="form-group row">
                                        <div class="col-md-4">
                                            <div class="form-group">
                                                Project 
                                                @Html.DropDownListFor(m => m.SiteID, new SelectList(ViewBag.ddlSite, "Value", "Text"), new { @class = "form-control" })
                                            </div>
                                        </div>
                                        @Html.HiddenFor(m => m.PK_GalleryID)
                                        <div class="col-md-4">
                                            <div class="form-group">
                                                <br />
                                                <input class="btn btn-success" type="submit" value="Search" id="btnSearch" name="Search" />
                                            </div>
                                        </div>
 
                                    </div>
                                   
                                    <div class="dt-responsive table-responsive">

                                        <table id="datatable-buttons" class="table table-striped table-bordered">
                                            <thead>
                                                <tr>
                                                    <th hidden>PK_GalleryID</th>
                                                    <th>S No.</th>
                                                    <th>Project</th>
                                                    <th>Image</th>
                                                    <th>Action</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @if (Model != null)
                                                {
                                                    if (Model.lstPlot != null)
                                                    {
                                                        int i = 1;
                                                        foreach (var Item in Model.lstPlot)
                                                        {
                                                            <tr class="text-left">
                                                                <td hidden>@Item.PK_GalleryID</td>
                                                                <td>@i</td>
                                                                <td>@Item.SiteName</td>
                                                                <td> <img src="@Item.SiteImage" id="img" height="100" width="100" /></td>

                                                                <td>
                                                                    @*<a href="/Master/PlotBooking?PK_GalleryID=@Item.PK_GalleryID" class="btn btn-info btn-sm">Edit</a>*@
                                                                    <a href="/Master/DeleteSiteImage?id=@Item.PK_GalleryID" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this image?');">Delete</a>
                                                                </td>
                                                            </tr>
                                                            i++;
                                                        }
                                                    }
                                                }
                                            </tbody>
                                            <thead>
                                                <tr>
                                                    <th hidden>PK_GalleryID</th>
                                                    <th>S No.</th>
                                                    <th>Project</th>
                                                    <th>Image</th>
                                                    <th>Action</th>
                                                </tr>
                                            </thead>
                                        </table>

                                    </div>
                                </dilv>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


}

 <script src="../vendor/jquery/jquery.min.js"></script>

<script>
    $(document).ready(function () {
        $('#dataTables-example').DataTable({
            responsive: true,

        });
    });

</script>



