@model ShivGardenHouse.Models.AssociateBooking

@{
    ViewBag.Title = "DistributePayment";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}


@using (Html.BeginForm("DistributePayment", "AdminReports", FormMethod.Post, new { @id = "form1" }))
{


    <div class="page-header">
        <div class="page-block">
            <div class="row align-items-center">
                <div class="col-md-8">
                    <div class="page-header-title">
                        <h4 class="m-b-10">Distribute Payment</h4>
                    </div>

                </div>
            </div>
        </div>
    </div>
    <div class="pcoded-inner-content">
        <div class="main-body">
            <div class="page-wrapper">
                <div class="page-body">
                    <div class="row">
                        <p style="color: red">
                            @TempData["distributed"]
                        </p>
                        <div class="col-md-12">
                            <!-- HTML5 Export Buttons table start -->
                            <div class="card">
                                @*<div class="card-header table-card-header">
                                        <a class="btn btn-primary btn-sm" style="margin-left:75%" href="/Master/NewsMaster">Add New</a>
                                    </div>*@
                                <div class="card-block">
                                    <div class="row">


                                        <div class="col-md-2">
                                            <div class="form-group">
                                                Date
                                                @Html.TextBoxFor(m => m.ToDate, new { @class = "form-control", @readonly = "ds" })
                                            </div>
                                        </div>

                                        <div class="col-md-2">
                                            <div class="form-group">
                                                <br />
                                                <input class="btn btn-success" type="submit" value="Distribute" id="btnSave" name="Save" onclick="return validateform();" />
                                            </div>
                                        </div>
                                    </div>
                                    <div class="dt-responsive table-responsive">
                                        <table id="basic-btn" class="table table-striped table-bordered nowrap">
                                            <thead>
                                                <tr>
                                                    <th>S No.</th>
                                                    <th>Login Id</th>
                                                    <th>Associate Name</th>
                                                    <th>Income</th>

                                                </tr>
                                            </thead>
                                            <tbody>
                                                @if (Model != null)
                                                {
                                                    if (Model.lstPlot != null)
                                                    {
                                                        int i = 1;
                                                        foreach (var Item in Model.lstPlot)
                                                        {
                                                            <tr class="text-left">
                                                                <td>@i</td>
                                                                <td>@Item.ToID</td>
                                                                <td>@Item.ToName</td>
                                                                <td>@Item.Income</td>

                                                            </tr>

                                                            i++;
                                                        }
                                                    }
                                                }

                                            </tbody>
                                            <tfoot>
                                                <tr>
                                                    <th>S No.</th>
                                                    <th>Login Id</th>
                                                    <th>Associate Name</th>
                                                    <th>Income</th>
                                                </tr>
                                            </tfoot>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

}


<script src="~/files/bower_components/jquery/js/jquery.min.js"></script>
<script src="//code.jquery.com/ui/1.11.4/jquery-ui.js"></script>
<link rel="stylesheet" type="text/css" href="https://code.jquery.com/ui/1.12.0/themes/smoothness/jquery-ui.css">
<script>


    $('#ToDate').datepicker({
        dateFormat: 'dd/mm/yy',
        changeYear: true,
        changeMonth: true,
        //minDate: 0
    });

    function validateform() {
        $(".errortext").removeClass("errortext");

        if ($('#ToDate').val() == '') {
            $("#ToDate").addClass('errortext');
            $('#ToDate').focus();
            return false;
        }



        return true;
    }
</script>



<style>
    .errortext {
        border: 1px solid red !important;
        background-color: #fff0f0 !important;
    }
</style>



