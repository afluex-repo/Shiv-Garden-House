@model ShivGardenHouse.Models.TraditionalAssociate

@{
    ViewBag.Title = "WelcomeLetter";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}



@using (Html.BeginForm("WelcomeLetter", "AdminReports", FormMethod.Post, new { @id = "form1" }))
{
    <div class="page-header">
        <div class="page-block">
            <div class="row align-items-center">
                <div class="col-md-8">
                    <div class="page-header-title">
                        <h4 class="m-b-10">Welcome Letter</h4>
                    </div>

                </div>
            </div>
        </div>
    </div>
    <div class="pcoded-inner-content">
        <div class="main-body">
            <div class="page-wrapper">
                <div class="page-body">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="card">
                                <div class="card-header">
                                    <h5>Welcome Letter</h5>
                                    <p style="color: red">
                                        @TempData["Plot"]
                                    </p>
                                </div>
                                <div class="card-block">
                                    <div class="row">
                                        <div class="col-md-3">
                                            <div class="form-group">
                                                Sponsor Login ID
                                                @Html.TextBoxFor(m => m.SponsorID, new { @class = "form-control", @Placeholder = "Sponsor LoginID" })
                                            </div>
                                        </div>
                                        <div class="col-md-3">
                                            <div class="form-group">
                                                Sponsor Name
                                                @Html.TextBoxFor(m => m.SponsorName, new { @class = "form-control", @Placeholder = "Sponsor Name" })
                                            </div>
                                        </div>
                                        <div class="col-md-3">
                                            <div class="form-group">
                                                Associate Login ID
                                                @Html.TextBoxFor(m => m.AssociateID, new { @class = "form-control", @Placeholder = "Search by PartnerID" })
                                            </div>
                                        </div>
                                        <div class="col-md-3">
                                            <div class="form-group">
                                                Associate Name
                                                @Html.TextBoxFor(m => m.AssociateName, new { @class = "form-control", @Placeholder = "Associate Name" })
                                            </div>
                                        </div>
                                        <div class="col-md-3">
                                            <div class="form-group">
                                                Joining From Date
                                                @Html.TextBoxFor(m => m.JoiningFromDate, new { @class = "form-control", @Placeholder = "From Date" })
                                            </div>
                                        </div>
                                        <div class="col-md-3">
                                            <div class="form-group">
                                                Joining To Date
                                                @Html.TextBoxFor(m => m.JoiningToDate, new { @class = "form-control", @Placeholder = "To Date" })
                                            </div>
                                        </div>
                                        <div class="col-md-3">
                                            <div class="form-group">
                                                <br />
                                                <input class="btn btn-success" type="submit" value="Search" id="btnSearchCustomer" name="btnSearchCustomer" />
                                            </div>
                                        </div>
                                    </div>
                                    </div>
                                

                                    <div class="dt-responsive table-responsive">
                                        <table id="basic-btn" class="table table-striped table-bordered nowrap">
                                            <thead>
                                                <tr>
                                                    <th hidden>PK_UserId</th>
                                                    <th>S No.</th>
                                                    <th>Branch</th>
                                                    <th>Associate ID</th>
                                                    <th>Associate Name</th>
                                                    <th>Sponsor ID </th>
                                                    <th>Sponsor Name</th>
                                                    <th>Designation</th>
                                                    @*<th>Name</th>*@
                                                    <th>Mobile Number</th>
                                                    <th>Email</th>
                                                    <th>PAN Number</th>
                                                    <th>Action</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @if (Model != null)
                                                {
                                                    if (Model.lstTrad != null)
                                                    {
                                                        int i = 1;
                                                        foreach (var Item in Model.lstTrad)
                                                        {
                                                <tr class="text-left">
                                                    <td hidden>
                                                        @Item.UserID
                                                        @Item.AssociateID
                                                    </td>
                                                    <td>@i</td>
                                                    <td>@Item.BranchName</td>
                                                    <td>@Item.AssociateID</td>
                                                    <td>@Item.AssociateName</td>
                                                    <td>@Item.SponsorID</td>
                                                    <td>@Item.SponsorName </td>
                                                    <td>@Item.DesignationName</td>
                                                    @*<td>@Item.FirstName</td>*@
                                                    <td>@Item.Contact</td>
                                                    <td>@Item.Email</td>
                                                    <td>@Item.PanNo</td>

                                                    <td>
                                                        <a href="/AdminReports/PrintWelcomeLetter?id=@Item.EncryptKey" class="btn btn-success btn-sm" target="_blank">Letter</a>
                                                        @* <a href="/AdminReports/PrintIDCard?id=@Item.EncryptKey" class="btn btn-success btn-sm" target="_blank">Card</a>*@

                                                    </td>
                                                </tr>
                                                            i++;
                                                        }
                                                    }
                                                }
                                            </tbody>
                                        </table>
                                        </div>
                                    

                                </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

<script src="~/files/bower_components/jquery/js/jquery.min.js"></script>
<script src="//code.jquery.com/ui/1.11.4/jquery-ui.js"></script>
<link rel="stylesheet" type="text/css" href="https://code.jquery.com/ui/1.12.0/themes/smoothness/jquery-ui.css">


