@model ShivGardenHouse.Models.Employee

@{
    ViewBag.Title = "EmployeeAttendanceReport";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}



@using (Html.BeginForm("EmployeeAttendanceReport", "Employee", FormMethod.Post, new { @id = "form1" }))
{

    <p style="color: red">
        @TempData["Attendance"]

    </p>
    <div class="page-header">
        <div class="page-block">
            <div class="row align-items-center">
                <div class="col-md-8">
                    <div class="page-header-title">
                        <h4 class="m-b-10">Employee Attendance Report</h4>
                    </div>

                </div>
            </div>
        </div>
    </div>
    <div class="pcoded-inner-content">
        <div class="main-body">
            <div class="page-wrapper">
                <div class="page-body">
                    <div class="row">
                        <div class="col-md-12">
                            <!-- HTML5 Export Buttons table start -->
                            <div class="card">

                                <div class="card-block">
                                    <div class="form-group row">

                                        <div class="col-sm-3">
                                            <label class="float-label"> FromDate</label>
                                            @Html.TextBoxFor(m => m.FromDate, new { @class = "form-control", @readonly = "readonly" })
                                            <span class="form-bar"></span>
                                        </div>
                                        <div class="col-sm-3">
                                            <label class="float-label"> ToDate</label>
                                            @Html.TextBoxFor(m => m.ToDate, new { @class = "form-control", @readonly = "readonly" })
                                            <span class="form-bar"></span>
                                        </div>
                                        <div class="col-sm-3">
                                            <label class="float-label"> Employee Name</label>
                                            @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
                                            <span class="form-bar"></span>
                                        </div>
                                        <div class="col-sm-3">
                                            <label class="float-label">Status</label>
                                            @Html.DropDownListFor(m => m.Status, new SelectList(ViewBag.AttendType, "Value", "Text"), new { @class = "form-control" })
                                            <span class="form-bar"></span>
                                        </div>
                                        <div class="col-md-12">
                                            <div class="form-group">
                                                <br />
                                                <input class="btn btn-success pull-left" type="submit" value="Search" id="btnSearch" name="Search"  />
                                            </div>
                                        </div>
                                    </div>

                                    <div class="dt-responsive table-responsive">
                                        <table class="table table-striped table-bordered nowrap">
                                            <thead>
                                                <tr>
                                                    <th>S No.</th>
                                                    <th>Date</th>
                                                    <th>Name</th>
                                                    <th>Contact</th>
                                                    <th>Email</th>
                                                    <th>UserType</th>
                                                  
                                                   
                                                    <th>Status</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @if (Model != null)
                                                {
                                                    if (Model.EmpList != null)
                                                    {
                                                        int i = 1;
                                                        foreach (var Item in Model.EmpList)
                                                        {
                                                            <tr class="text-left">
                                                                <td hidden>@Item.UserID</td>
                                                                <td>@i</td>
                                                                <td>@Item.JoiningDate</td>
                                                                <td>@Item.Name</td>
                                                                <td>@Item.Mobile  </td>
                                                                <td>@Item.Email </td>
                                                                <td>@Item.UserTypeName</td>
                                                                
                                                                
                                                                <td>@Item.Status</td>
                                                            </tr>
                                                            i++;
                                                        }
                                                        <input type='hidden' value='@i' id='hdrows' name='hdrows' />
                                                    }
                                                }
                                            </tbody>

                                        </table>
                                       
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
    <script src="~/files/bower_components/jquery/js/jquery.min.js"></script>
    <script src="//code.jquery.com/ui/1.11.4/jquery-ui.js"></script>
    <link rel="stylesheet" type="text/css" href="https://code.jquery.com/ui/1.12.0/themes/smoothness/jquery-ui.css">


    <script>
    $(document).ready(function () {
        $("#divload").css({ 'display': 'none' });

    });

    $('#ToDate').datepicker({
        dateFormat: 'dd/mm/yy',
        changeYear: true,
        changeMonth: true
    });

    

    $('#FromDate').datepicker({
        dateFormat: 'dd/mm/yy',
        changeYear: true,
        changeMonth: true
    });

    </script>
   