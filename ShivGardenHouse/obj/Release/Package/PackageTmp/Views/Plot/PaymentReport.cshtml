@model ShivGardenHouse.Models.Plot
@{
    ViewBag.Title = "PaymentReport";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

@using (Html.BeginForm("PaymentReport", "Plot", FormMethod.Post, new { @id = "form1" }))
{
    <div class="page-header">
        <div class="page-block">
            <div class="row align-items-center">
                <div class="col-md-8">
                    <div class="page-header-title">
                        <h4 class="m-b-10">Payment Report</h4>
                    </div>

                </div>
            </div>
        </div>
    </div>
    <div class="pcoded-inner-content">
        <div class="main-body">
            <div class="page-wrapper">
                <div class="page-body">
                    <div class="row">
                        <div class="col-md-12">
                            <!-- HTML5 Export Buttons table start -->
                            <div class="card">
                                <div class="card-header table-card-header">

                                </div>
                                <div class="card-block">
                                    <div class="row">
                                        <div class="col-md-3">
                                            <div class="form-group">
                                                CustomerID
                                                @Html.TextBoxFor(m => m.CustomerID, new { @class = "form-control", @Placeholder = "Search by CustomerID" })
                                            </div>
                                        </div>
                                        <div class="col-md-3">
                                            <div class="form-group">
                                                Payment Status
                                                @Html.DropDownListFor(m => m.PaymentStatus, new SelectList(ViewBag.ddlpaymentStatus, "Value", "Text"), new { @class = "form-control" })
                                            </div>
                                        </div>
                                        <div class="col-md-3">
                                            <div class="form-group">
                                                From Date
                                                @Html.TextBoxFor(m => m.FromDate, new { @class = "form-control", @Placeholder = "Search From Date", @readonly = "readonly" })
                                            </div>
                                        </div>
                                        <div class="col-md-3">
                                            <div class="form-group">
                                                To Date
                                                @Html.TextBoxFor(m => m.ToDate, new { @class = "form-control", @Placeholder = "Search To Date", @readonly = "readonly" })
                                            </div>
                                        </div>
                                    </div>

                                    <div class="row">
                                        <div class="col-md-12">
                                            <div class="form-group">
                                                <input class="btn btn-success pull-left" type="submit" value="Search" id="btnSearch" name="Search" />
                                            </div>
                                        </div>
                                    </div>
                                    <div class="dt-responsive table-responsive">
                                        <table id="basic-btn" class="table table-striped table-bordered nowrap">
                                            <thead>
                                                <tr>
                                                    <th>S No.</th>
                                                    <th>Customer</th>
                                                    <th>Associate</th>
                                                    <th>Mode</th>
                                                    <th>Date</th>
                                                    <th>Transaction No.</th>
                                                    <th>Amount</th>
                                                    <th>Status</th>
                                                    <th>Approved/Rejected Date</th>
                                                    <th>Description</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                               @if (Model != null)
                                               {
                                                   if (Model.lstPlot != null)
                                                   {
                                                       int i = 1;
                                                       foreach (var Item in Model.lstPlot)
                                                       {
                                                        <tr class="text-left">
                                                            <td>@i</td>
                                                            <td>@Item.CustomerID (@Item.CustomerName)</td>
                                                            <td>@Item.AssociateID (@Item.AssociateName)</td>
                                                            <td>@Item.PaymentMode</td>
                                                            <td>@Item.TransactionDate</td>
                                                            <td>@Item.TransactionNumber</td>
                                                           
                                                            <td>@Item.PaidAmount</td>
                                                            <td>@Item.PaymentStatus</td>
                                                            <td>@Item.ApprovedDate</td>
                                                            <td>@Item.ApproveDescription</td>
                                                         
                                                        </tr>
                                                           i++;
                                                       }
                                                   }
                                               }

                                            </tbody>
                                            <tfoot>
                                                <tr>
                                                    <th>S No.</th>
                                                    <th>Customer</th>
                                                    <th>Associate</th>
                                                    <th>Mode</th>
                                                    <th>Date</th>
                                                    <th>Transaction No.</th>
                                                    <th>Amount</th>
                                                    <th>Status</th>
                                                    <th>Approved/Rejected Date</th>
                                                    <th>Description</th>
                                                </tr>
                                            </tfoot>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>




       

    <input type="hidden" id="txtdecription" />
               
}

<script src="~/files/bower_components/jquery/js/jquery.min.js"></script>
<script src="//code.jquery.com/ui/1.11.4/jquery-ui.js"></script>
<link rel="stylesheet" type="text/css" href="https://code.jquery.com/ui/1.12.0/themes/smoothness/jquery-ui.css">

<script>
   

    $('#FromDate').datepicker({
        dateFormat: 'dd/mm/yy',
        changeYear: true,
        changeMonth: true
    });
    $('#ToDate').datepicker({
        dateFormat: 'dd/mm/yy',
        changeYear: true,
        changeMonth: true
    });

</script>
